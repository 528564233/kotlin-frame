<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_10_break"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="20dp"
    tools:ignore="MissingConstraints"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_second_color"
        android:layout_marginBottom="10dp"
        android:textSize="13sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:gravity="center"
        android:id="@+id/tv_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="11"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_main_color"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="20dp"
        android:id="@+id/cl_line"
        app:layout_constraintTop_toBottomOf="@+id/tv_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_line"></include>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatTextView
        app:layout_goneMarginTop="20dp"
        android:gravity="center"
        android:id="@+id/tv_two"
        android:layout_width="match_parent"
        android:text="22"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_main_color"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/cl_line"
         />


    <androidx.appcompat.widget.AppCompatTextView
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:id="@+id/text_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_dis_3_break"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/text_second_color"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_two" />

</androidx.constraintlayout.widget.ConstraintLayout>